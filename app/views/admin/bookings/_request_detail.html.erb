<div class="request-details">
    <div class="date-range">
      <strong><%= t(".time") %>:</strong>
      <%= l(request.check_in.to_date, format: :short) %> - <%= l(request.check_out.to_date, format: :short) %>
    </div>

    <div class="guests">
      <strong><%= t(".guests") %>:</strong> <%= request.number_of_guests %>
    </div>

    <div class="guests">
      <strong><%= t(".status") %>:</strong> <%= request.status.titleize %>
    </div>

    <% if request.status_checked_in? || request.status_checked_out? %>
      <div class="guests">
        <strong><%= t(".checked_in_guests") %>:</strong> <%= request.guests.count %>
      </div>
    <% end %>

    <% if request.note.present? %>
      <div class="note">
        <strong><%= t(".note") %>:</strong> <%= request.note %>
      </div>
    <% end %>
    
    <% if request.room_availabilities.any? %>
      <div class="rooms-section">
        <strong><%= t(".booked_rooms") %>:</strong>
        <div class="rooms-list">
         <%= render partial: "admin/bookings/room_item",
           collection: request.room_availabilities.group_by(&:room).to_a,
           as: :room_group %>
        </div>
      </div>
    <% end %>
  </div>
