<div class="info-card">
  <h3><%= t(".title") %></h3>

  <div class="info-item">
    <strong><%= t(".name") %>:</strong>
    <%= user.name %>
  </div>

  <div class="info-item">
    <strong><%= t(".email") %>:</strong>
    <%= user.email %>
  </div>

  <div class="info-item">
    <strong><%= t(".phone") %>:</strong>
    <%= user.phone %>
  </div>

  <div class="info-item">
    <strong><%= t(".status") %>:</strong>
    <span class="status-badge <%= user.status %>">
      <%= t("admin.users.user.status_#{user.status}") %>
    </span>
  </div>

  <div class="info-item">
    <strong><%= t(".created_at") %>:</strong>
    <%= l(user.created_at, format: :long) %>
  </div>
</div>
