<% provide :title, t(".title") %>

<div class="admin-reviews admin-common">
  <div class="header">
    <h1><%= t(".title") %></h1>
    <h3><%= t(".header", count: @pagy.count) %></h3>
  </div>
  <%= render partial: "form_search_review" %>

  <% unless @reviews.empty? %>
    <%= render partial: "table_reviews", locals: { reviews: @reviews } %>

    <div class="pagination-wrapper">
      <%== pagy_bootstrap_nav @pagy %>
      <div class="pagy-info">
        <%= t(".pagy_info", from: @pagy.from, to: @pagy.to, count: @pagy.count) %>
      </div>
    </div>
  <% end %>

  <% if @reviews.empty? %>
    <div class="empty-state">
      <i class="fas fa-calendar-times"></i>
      <h3><%= t(".no_results") %></h3>
    </div>
  <% end %>
</div>
