<div class="search-section">
  <%= search_form_for @q, url: admin_reviews_path, method: :get, local: true do |f| %>
    <div class="search-form">
      <div class="search-field">
        <%= f.label :user_name_cont, t(".user_name"), class: "form-label" %>
        <%= f.text_field :user_name_cont, class: "form-control", placeholder: t(".placeholder_user_name") %>
      </div>

      <div class="search-field">
        <%= f.label :request_booking_booking_code_cont, t(".booking_code"), class: "form-label" %>
        <%= f.text_field :request_booking_booking_code_cont, class: "form-control", placeholder: t(".placeholder_booking_code") %>
      </div>

      <div class="search-field">
        <%= f.label :request_room_room_number_cont, t(".room_number"), class: "form-label" %>
        <%= f.text_field :request_room_room_number_cont, class: "form-control", placeholder: t(".placeholder_room_number") %>
      </div>

      <div class="search-field">
        <%= f.label :review_status_eq, t(".status"), class: "form-label" %>
        <%= f.select :review_status_eq,
            options_for_select(review_status_options, params.dig(:q, :review_status_eq)), {},
            { class: "form-select" } %>
      </div>

      <div class="search-field">
        <%= f.label :rating_eq, t(".rating"), class: "form-label" %>
        <%= f.select :rating_eq,
            options_for_select(rating_options, params.dig(:q, :rating_eq)), {},
            { class: "form-select" } %>
      </div>

      <div class="search-actions">
        <%= f.submit t(".search_button"), class: "btn btn-primary" %>
        <%= link_to t(".reset_button"), admin_reviews_path, class: "btn btn-secondary" %>
      </div>
    </div>
  <% end %>
</div>
