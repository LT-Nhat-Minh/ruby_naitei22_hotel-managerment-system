<div class="search-section">
  <%= search_form_for @q, url: admin_room_availabilities_path, method: :get, local: true do |f| %>
    <div class="search-form">

      <!-- Search by room_number (room.room_number) -->
      <div class="search-field">
        <%= f.label :room_room_number_cont, t(".room_number"), class: "form-label" %>
        <%= f.search_field :room_room_number_cont, class: "form-control", placeholder: t(".room_number_placeholder") %>
      </div>

      <!-- Search by room_type_name -->
      <div class="search-field">
        <%= f.label :room_type_name_cont, t(".room_type_name"), class: "form-label" %>
        <%= f.search_field :room_type_name_cont, class: "form-control", placeholder: t(".room_type_name_placeholder") %>
      </div>

      <!-- Search by available_date -->
      <div class="search-field">
        <%= f.label :available_date_eq, t(".available_date"), class: "form-label" %>
        <%= f.date_field :available_date_eq, class: "form-control", value: (params.dig(:q, :available_date_eq).presence || Date.current) %>
      </div>

      <!-- Search by status (is_available) -->
      <div class="search-field">
        <%= f.label :is_available_eq, t(".status"), class: "form-label" %>
        <%= f.select :is_available_eq,
          options_for_select(room_availability_status_options, params.dig(:q, :is_available_eq)),
          {},
          { class: "form-select" } %>
      </div>

      <div class="search-actions">
        <%= f.submit t(".search_button"), class: "btn btn-primary" %>
        <%= link_to t(".reset_button"), admin_room_availabilities_path, class: "btn btn-secondary" %>
      </div>
    </div>
  <% end %>
</div>
