<% provide :title, t(".title") %>

<div class="admin-rooms admin-common">
  <div class="header">
    <h1><%= t(".title") %></h1>
    <div class="rooms-header-row">
      <h3 class="mb-0"><%= t(".list_title", count: @pagy.count) %></h3>
      <%= link_to t(".new_room"), "#", class: "btn btn-primary" %>
    </div>
  </div>

  <%= render "form_search_room" %>

  <div class="table-container">
    <table class="table table-striped">
      <thead>
        <tr>
          <th><%= t(".room_id") %></th>
          <th><%= t(".room_number") %></th>
          <th><%= t(".room_type") %></th>
          <th><%= t(".capacity") %></th>
          <th><%= t(".status") %></th>
          <th><%= t(".price") %></th>
          <th><%= t(".available_date") %></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <%= render @room_availabilities %>
      </tbody>
    </table>

    <% if @room_availabilities.any? %>
      <div class="pagination-wrapper">
        <%== pagy_bootstrap_nav(@pagy) if defined?(pagy_bootstrap_nav) && @pagy %>
        <% if @pagy %>
          <div class="pagy-info">
            <%= t(".pagy_info", from: @pagy.from, to: @pagy.to, count: @pagy.count) %>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="empty-state">
        <i class="fas fa-calendar-times"></i>
        <h3><%= t(".no_results") %></h3>
      </div>
    <% end %>
  </div>
</div>
