<% provide :title, t(".title") %>

<div class="container-fluid mt-4">
  <div class="admin-room-types">
    <h1><%= t(".title") %></h1>

    <div class="d-flex justify-content-between align-items-center mb-4 w-100">
      <h2 class="mb-0">
        <%= t(".list_title", count: @room_types.count) %>
      </h2>
      <%= link_to t(".new"), new_admin_room_type_path, class: "btn btn-primary" %>
    </div>

    <div class="row mb-3 justify-content-end">
      <div class="col-md-4 d-flex">
        <%= search_form_for @q, url: admin_room_types_path, method: :get, html: { class: "w-100 d-flex" } do |f| %>
          <%= f.search_field :name_cont, placeholder: t(".search"), class: "form-control me-2" %>
        <% end %>
      </div>
    </div>

    <!-- Table -->
    <div class="table-responsive">
      <table class="table table-striped table-hover align-middle">
        <thead>
          <tr>
            <th><input type="checkbox" /></th>
            <th><%= t(".id") %></th>
            <th><%= t(".name") %></th>
            <th><%= t(".description") %></th>
            <th><%= t(".number_of_rooms") %></th>
            <th><%= t(".updated_at") %></th>
            <th><%= t(".action") %></th>
          </tr>
        </thead>
        <tbody>
          <%= render @room_types %>
        </tbody>
      </table>
    </div>
  </div>
</div>
