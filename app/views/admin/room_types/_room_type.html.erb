<tr>
  <td><input type="checkbox" /></td>
  <td><%= room_type.id %></td>
  <td><%= room_type.name %></td>
  <td><%= room_type.description %></td>
  <td><%= room_type.number_of_rooms %></td>
  <td><%= l(room_type.updated_at, format: :short) %></td>
  <td>
    <%= link_to edit_admin_room_type_path(room_type), class: "text-primary me-2", title: t(".edit") do %>
      <i class="fas fa-pen"></i>
    <% end %>

    <%= link_to admin_room_type_path(room_type), data: {
      "turbo-method": :delete,
      turbo_confirm: t(".confirm_delete")
    }, class: "text-danger", title: t(".delete") do %>
      <i class="fas fa-trash"></i>
    <% end %>
  </td>
</tr>
