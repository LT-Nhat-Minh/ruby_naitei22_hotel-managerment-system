<% provide :title, t("signup.title") %>

<h1><%= t("signup.title") %></h1>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for @user, url: signup_path do |f| %>
            <%= render "form", f: f %>

            <%= f.submit t("signup.submit"), class: "btn btn-primary" %>
        <% end %>
    </div>
</div>
