<% if object.errors.any? %>
  <div class="bootstrap-scope">
    <div id="error_explanation">
      <div class="alert alert-danger">
        <%= t("the_form_contains") %>
        <%= pluralize(object.errors.count, "error") %>.
      </div>
      <ul>
        <% object.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
